{
    "name": "sheronov/php-mystem",
    "description": "A PHP wrapper for Yandex MyStem program",
    "type": "project",
    "keywords": ["lemma", "lemmatize", "stemmer", "yandex", "mystem"],
    "license": "MIT",
    "authors": [
        {
            "name": "Evgeniy Sheronov",
            "email": "webrush@bk.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sheronov\\PhpMyStem\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "sheronov/mystem-windows",
                "version": "3.1",
                "bin": [
                    "mystem.exe"
                ],
                "dist": {
                    "url": "https://download.cdn.yandex.net/mystem/mystem-3.1-win-64bit.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "sheronov/mystem-nix-bin",
                "version": "3.1",
                "bin": [
                    "mystem"
                ],
                "dist": {
                    "url": "https://download.cdn.yandex.net/mystem/mystem-3.1-linux-64bit.tar.gz",
                    "type": "tar"
                },
                "extra": {
                    "macos_dist": {
                        "url": "https://download.cdn.yandex.net/mystem/mystem-3.1-macosx.tar.gz",
                        "type": "tar"
                    }
                }
            }
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "sheronov/mystem-windows": "dev-master",
        "sheronov/mystem-nix-bin": "dev-master"
    },
    "scripts": {
        "pre-install-cmd": [
            "Sheronov\\PhpMyStem\\Utils\\System::nixBinaryFileSelect"
        ],
        "pre-update-cmd": [
            "Sheronov\\PhpMyStem\\Utils\\System::nixBinaryFileSelect"
        ]
    }
}
